PGID={PGID}
PRIMARY_USERNAME={LINUX_USER}
TZ={TIMEZONE}
USERDIR=/home/{LINUX_USER}
DOCKERDIR={DOCKERDIR}
HOSTNAME={HOSTNAME}

# ── Domain & Network ──────────────────────────────────────────────────────────
