SERVER_LAN_IP={SERVER_LAN_IP}
DOCKER0_IP=172.17.0.1
LOCAL_IPS=127.0.0.1/32,10.0.0.0/8,192.168.0.0/16,172.16.0.0/12
CLOUDFLARE_IPS=173.245.48.0/20,103.21.244.0/22,103.22.200.0/22,103.31.4.0/22,141.101.64.0/18,108.162.192.0/18,190.93.240.0/20,188.114.96.0/20,197.234.240.0/22,198.41.128.0/17,162.158.0.0/15,104.16.0.0/13,104.24.0.0/14,172.64.0.0/13,131.0.72.0/22

# ── Data Directories ──────────────────────────────────────────────────────────
DOWNLOADSDIR={DOWNLOADSDIR}
DATADIR1={DATADIR1}
DATADIR2={DATADIR2}
MEDIADIR1={MEDIADIR1}
MEDIADIR2={MEDIADIR2}

# ── Docker Socket Proxy ───────────────────────────────────────────────────────
DOCKER_HOST=tcp://socket-proxy:2375
DOCKER_API_VERSION=1.41

# ── Traefik ───────────────────────────────────────────────────────────────────
TRAEFIK_VERSION_PIN=3.3
# TRAEFIK_LOG_LEVEL=INFO    # DEBUG for verbose troubleshooting

# ── Cloudflare ────────────────────────────────────────────────────────────────
# CF_DNS_API_TOKEN stored in $DOCKERDIR/secrets/cf_dns_api_token (not here)
CLOUDFLARE_EMAIL={CF_EMAIL}

# ── Authentication ────────────────────────────────────────────────────────────
TINYAUTH_VERSION_PIN=v3
# CROWDSEC_TRAEFIK_BOUNCER_API_KEY is set by: ./manage.sh security crowdsec-setup
CROWDSEC_TRAEFIK_BOUNCER_API_KEY=CHANGE_ME

# ── Plex ──────────────────────────────────────────────────────────────────────
PLEX_SERVER_NAME={HOSTNAME}
# PLEX_CLAIM stored in secrets/plex_claim — get from https://plex.tv/claim

# ── Gluetun / VPN ─────────────────────────────────────────────────────────────
GLUETUN_VPN_SERVICE_PROVIDER=CHANGE_ME   # e.g. mullvad, private internet access, nordvpn
GLUETUN_VPN_TYPE=wireguard               # wireguard or openvpn
GLUETUN_WIREGUARD_PRIVATE_KEY=CHANGE_ME
GLUETUN_WIREGUARD_ADDRESSES=CHANGE_ME
# GLUETUN_OPENVPN_USERNAME=CHANGE_ME
# GLUETUN_OPENVPN_PASSWORD=CHANGE_ME

# ── Notifiarr ─────────────────────────────────────────────────────────────────
NOTIFIARR_API_KEY=CHANGE_ME

# ── SMTP / Notifications (optional) ──────────────────────────────────────────
SMTP_FROM=noreply@{DOMAINNAME_1}
SMTP_HOST=smtp.{DOMAINNAME_1}
SMTP_PORT=587
SMTP_USER=noreply@{DOMAINNAME_1}
SMTP_PASS=CHANGE_ME

