# Headscale configuration
# Generated by portless
# Reference: https://github.com/juanfont/headscale/blob/main/config-example.yaml

server_url: https://{HEADSCALE_DOMAIN}

listen_addr: 0.0.0.0:8080
metrics_listen_addr: 0.0.0.0:9090

# gRPC (used for headscale CLI commands inside the container)
grpc_listen_addr: 0.0.0.0:50443
grpc_allow_insecure: false

# TLS — handled by Caddy, so Headscale itself uses plain HTTP internally
tls_letsencrypt_hostname: ""
tls_letsencrypt_cache_dir: /var/lib/headscale/cache
tls_letsencrypt_challenge_type: HTTP-01
tls_cert_path: ""
tls_key_path: ""

# Noise private key (auto-generated on first run)
noise:
  private_key_path: /var/lib/headscale/noise_private.key

# IP address pool for Tailscale clients
prefixes:
  v4: 100.64.0.0/10
  v6: fd7a:115c:a1e0::/48
  allocation: sequential

# DERP (relay) configuration — use Tailscale's public DERP map by default
derp:
  server:
    enabled: false
  urls:
    - https://controlplane.tailscale.com/derpmap/default
  auto_update_enabled: true
  update_frequency: 24h

# Disable magic DNS (headscale has its own DNS management)
dns:
  magic_dns: true
  base_domain: {HEADSCALE_DOMAIN}
  nameservers:
    global:
      - 1.1.1.1
      - 8.8.8.8

# Log level
log:
  level: info

# Database — SQLite (sufficient for most homelabs)
database:
  type: sqlite3
  sqlite:
    path: /var/lib/headscale/db.sqlite

# ACME / Let's Encrypt (disabled — Caddy handles TLS)
acme_url: https://acme-v02.api.letsencrypt.org/directory
acme_email: {ACME_EMAIL}

# Policy / ACL
policy:
  path: ""
  mode: file

# CLI timeout
cli:
  timeout: 10s
