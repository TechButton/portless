# Pangolin stack — VPS docker-compose
# Generated by portless install wizard
# Pangolin: https://github.com/fosrl/pangolin
#
# Template vars: {PANGOLIN_DOMAIN} {ACME_EMAIL}
#

services:

  # ─── Pangolin — tunnel server + admin dashboard ────────────────────────────
  pangolin:
    image: fosrl/pangolin:latest
    container_name: pangolin
    restart: unless-stopped
    volumes:
      - ./config:/app/config
    networks:
      - pangolin_net
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:3001/api/v1/ping"]
      interval: 10s
      timeout: 5s
      retries: 12
      start_period: 60s
    labels:
      - "traefik.enable=true"
      # Dashboard / API
      - "traefik.http.routers.pangolin.rule=Host(`{PANGOLIN_DOMAIN}`)"
      - "traefik.http.routers.pangolin.entrypoints=websecure"
      - "traefik.http.routers.pangolin.tls.certresolver=letsencrypt"
      - "traefik.http.services.pangolin.loadbalancer.server.port=3001"
      # Catch-all: route resource subdomains to Pangolin proxy
      - "traefik.http.routers.pangolin-resources.rule=HostRegexp(`{subdomain:[a-z0-9-]+}.{BASE_DOMAIN}`)"
      - "traefik.http.routers.pangolin-resources.entrypoints=websecure"
      - "traefik.http.routers.pangolin-resources.tls.certresolver=letsencrypt"
      - "traefik.http.routers.pangolin-resources.service=pangolin"
      - "traefik.http.routers.pangolin-resources.priority=1"

  # ─── Gerbil — WireGuard tunnel manager ────────────────────────────────────
  gerbil:
    image: fosrl/gerbil:latest
    container_name: gerbil
    restart: unless-stopped
    depends_on:
      pangolin:
        condition: service_healthy
    command:
      - --reachableAt=http://gerbil:3003
      - --generateAndSaveKeyTo=/var/config/private.key
      - --remoteConfig=http://pangolin:3001/api/v1/gerbil/get-config
      - --reportBandwidthTo=http://pangolin:3001/api/v1/gerbil/receive-bandwidth
    volumes:
      - ./config:/var/config
    cap_add:
      - NET_ADMIN
      - SYS_MODULE
    sysctls:
      - net.ipv4.ip_forward=1
      - net.ipv4.conf.all.src_valid_mark=1
      - net.ipv6.conf.all.disable_ipv6=0
      - net.ipv6.conf.all.forwarding=1
    ports:
      - "51820:51820/udp"
      - "51821:51821/udp"
    networks:
      - pangolin_net

  # ─── Traefik — TLS termination + routing ──────────────────────────────────
  traefik:
    image: traefik:v3.3
    container_name: traefik_pangolin
    restart: unless-stopped
    depends_on:
      pangolin:
        condition: service_healthy
    command:
      - "--log.level=WARN"
      - "--accesslog=false"
      - "--api.dashboard=false"
      - "--providers.docker=true"
      - "--providers.docker.exposedbydefault=false"
      - "--providers.docker.network=pangolin_net"
      # Pangolin dynamic config provider (routes resources automatically)
      - "--providers.http.endpoint=http://pangolin:3001/api/v1/traefik-config"
      - "--providers.http.pollInterval=5s"
      # Entrypoints
      - "--entrypoints.web.address=:80"
      - "--entrypoints.web.http.redirections.entrypoint.to=websecure"
      - "--entrypoints.web.http.redirections.entrypoint.scheme=https"
      - "--entrypoints.websecure.address=:443"
      # Let's Encrypt
      - "--certificatesresolvers.letsencrypt.acme.httpchallenge=true"
      - "--certificatesresolvers.letsencrypt.acme.httpchallenge.entrypoint=web"
      - "--certificatesresolvers.letsencrypt.acme.email={ACME_EMAIL}"
      - "--certificatesresolvers.letsencrypt.acme.storage=/letsencrypt/acme.json"
    volumes:
      - /var/run/docker.sock:/var/run/docker.sock:ro
      - ./config/letsencrypt:/letsencrypt
    ports:
      - "80:80"
      - "443:443"
    networks:
      - pangolin_net

networks:
  pangolin_net:
    driver: bridge
